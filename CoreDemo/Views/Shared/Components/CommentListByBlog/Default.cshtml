@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @if(Model.Count() == 0){<h5 class="mt-0">İlk yorumu sen yapmak ister misin ?</h5>}
            else { 
    @foreach (var item in Model)
    {
   
    <div class="media">
        <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
        <div class="media-body">
            <h5 class="mt-0">@item.CommentUserName</h5>
            <h6>
                @item.CommentTitle
            </h6>
            <p >@item.CommentDate.ToString("dd-MMMM-yyyy")</p>



        </div>
    </div>
        
    }}
</div>


